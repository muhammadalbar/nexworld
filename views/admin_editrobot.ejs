<div
  class="modal fade"
  id="exampleModal2"
  tabindex="-1"
  aria-labelledby="exampleModalLabel2"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" style="font-weight: 600">
          Update Konten
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="uptitle" class="form-label" style="font-weight: 700"
            >Judul Konten</label
          >
          <input type="text" class="form-control" id="uptitle" />
        </div>
        <div class="mb-3">
          <label for="upurl" class="form-label" style="font-weight: 700"
            >Url</label
          >
          <input type="text" class="form-control" id="upurl" />
        </div>
        <div class="mb-3">
          <label for="sort_number" class="form-label" style="font-weight: 700"
            >Tentukan No Urut Konten</label
          >
          <select name="up_sort_number" id="up_sort_number" class="form-select">
            <option disabled selected>Tentukan Urutan</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-light px-4 border border-primary border-2"
          data-bs-dismiss="modal"
        >
          Back
        </button>
        <button
          type="button"
          class="btn btn-primary px-4"
          style="background-color: #0b2559"
          onclick="updateKonten()"
        >
          Save
        </button>
      </div>
    </div>
  </div>
</div>

