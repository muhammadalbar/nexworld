      />
    </div>
    <div class="col">
      <label for="robottitle" class="form-label" style="font-weight: 700"
        >Title</label
      >
      <input
        type="text"
        class="form-control"
        id="robottitle"
        value="<%= title %>"
      />
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <label for="robotdesc" class="form-label" style="font-weight: 700"
        >Description</label
      >
      <input
        type="text"
        class="form-control"
        id="robotdesc"
        value="<%= description %>"
      />
    </div>
    <div class="col">
      <label for="store-url" class="form-label" style="font-weight: 700"
        >Store Url</label
