<h3 style="font-weight: 600">Partner List</h3>
<div
  class="modal fade"
  id="modalUpdate"
  tabindex="-1"
  aria-labelledby="modalUpdateLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalUpdateLabel" style="font-weight: 600">
          Edit Partner SMI
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="updealer_name" class="form-label" style="font-weight: 700"
            >Dealer Name</label
          >
          <input type="text" class="form-control" id="updealer_name" />
        </div>
        <div class="mb-3">
          <label for="upcode" class="form-label" style="font-weight: 700"
            >Code</label
          >
          <input type="number" class="form-control" id="upcode" />
        </div>
        <div class="mb-3">
          <label for="upcust_name" class="form-label" style="font-weight: 700"
            >Cust Name</label
          >
          <input type="text" class="form-control" id="upcust_name" />
        </div>
        <div class="mb-3">
          <label for="upurl" class="form-label" style="font-weight: 700"
            >Url</label
          >
          <input type="text" class="form-control" id="upurl" />
        </div>
        <div class="mb-3">
          <label for="upregion" class="form-label" style="font-weight: 700"
            >Region</label
          >
          <input type="text" class="form-control" id="upregion" />
        </div>
        <div class="mb-3">
          <label for="upteam" class="form-label" style="font-weight: 700"
            >Team</label
          >
          <input type="text" class="form-control" id="upteam" />
        </div>
        <div class="mb-3">
          <input type="radio" value="Dropship" name="updropship" id="upyes" />
          <label for="upyes" class="form-label me-3" style="font-weight: 700"
            >Dropship</label
          >
          
          <input type="radio" value="Non Dropship" name="updropship" id="upno" />
          <label for="upno" class="form-label" style="font-weight: 700"
            >Non Dropship</label
          >
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-light px-4 border border-primary border-2"
          data-bs-dismiss="modal"
        >
          Back
        </button>
        <button
          type="button"
          class="btn btn-primary px-4"
          style="background-color: #0b2559"
          onclick="updatePartner()"
        >
          Save
        </button>
      </div>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" style="font-weight: 600">
          Add New Partner SMI
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="dealer_name" class="form-label" style="font-weight: 700"
            >Dealer Name</label
          >
          <input type="text" class="form-control" id="dealer_name" />
        </div>
        <div class="mb-3">
          <label for="code" class="form-label" style="font-weight: 700"
            >Code</label
          >
          <input type="number" class="form-control" id="code" />
        </div>
        <div class="mb-3">
          <label for="cust_name" class="form-label" style="font-weight: 700"
            >Cust Name</label
          >
          <input type="text" class="form-control" id="cust_name" />
        </div>
        <div class="mb-3">
          <label for="url" class="form-label" style="font-weight: 700"
            >Url</label
          >
          <input type="text" class="form-control" id="url" />
        </div>
        <div class="mb-3">
          <label for="region" class="form-label" style="font-weight: 700"
            >Region</label
          >
          <input type="text" class="form-control" id="region" />
        </div>
        <div class="mb-3">
          <label for="team" class="form-label" style="font-weight: 700"
            >Team</label
          >
          <input type="text" class="form-control" id="team" />
        </div>
        <div class="mb-3">
          <input type="radio" value="Dropship" name="dropship" id="yes" />
          <label for="yes" class="form-label me-3" style="font-weight: 700"
            >Dropship</label
          >
          
          <input type="radio" value="Non Dropship" name="dropship" id="no" />
          <label for="no" class="form-label" style="font-weight: 700"
            >Non Dropship</label
          >
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-light px-4 border border-primary border-2"
          data-bs-dismiss="modal"
        >
          Back
        </button>
        <button
          type="button"
          class="btn btn-primary px-4"
          style="background-color: #0b2559"
          onclick="addPartner()"
        >
          Save
        </button>
      </div>
    </div>
  </div>
</div>

<div class="mt-3 mb-3 p-1 d-flex justify-content-between">
  <div class="d-flex">
    <div class="my-2">Show</div>
    <div class="btn-group">
      <button
        type="button"
        class="btn btn-light dropdown-toggle"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <%= perPage %>
      </button>
      <ul class="dropdown-menu">
        <li>
          <a
            class="dropdown-item"
            href="/admin/partnersmilist?search=<%= sch %>&page=1&perPage=10"
            >10</a
          >
        </li>
        <li>
          <a
            class="dropdown-item"
            href="/admin/partnersmilist?search=<%= sch %>&page=1&perPage=50"
            >50</a
          >
        </li>
        <li>
          <a
            class="dropdown-item"
            href="/admin/partnersmilist?search=<%= sch %>&page=1&perPage=100"
            >100</a
          >
        </li>
      </ul>
    </div>
    <div class="my-2">Entires</div>
  </div>
  <div class="d-flex">
    <input
      id="sch"
      type="text"
      class="form-control"
      placeholder="Search here"
      value="<%= sch %>"
    />
    <button
      type="button"
      class="btn btn-primary mx-1"
      style="background-color: #0b2559"
      onclick="goSch()"
    >
      <span data-feather="search"></span>
    </button>
    <button
      type="button"
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#exampleModal"
      style="background-color: #0b2559; width: 200px; font-size: 12px"
    >
      <span data-feather="plus"></span>
      Add partner SMI
    </button>
  </div>
</div>
<div class="shadow p-2 rounded">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">NO</th>
        <th scope="col">Dealer Name</th>
        <th scope="col">Code</th>
        <th scope="col">Cust Name</th>
        <th scope="col">Url</th>
        <th scope="col">Region</th>
        <th scope="col">Team</th>
        <th scope="col">Dropship</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% data.map((item, index)=>{ %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= item.dealer_name %></small></td>
        <td><%= item.code %></td>
        <td><%= item.cust_name %></td>
        <td><div class="cut-text" style="width: 150px;"><%= item.url %></div></td>
        <td><%= item.region %></td>
        <td><%= item.team %></td>
        <td><%= item.dropship %></td>
        <td>
          <div>
            <button
              type="button"
              class="btn btn-light px-3 border border-dark"
              style="font-size: 10px"
              onclick="goEdit('<%= item.uid %>')"
              data-bs-toggle="modal"
              data-bs-target="#modalUpdate"
            >
              Edit
            </button>
            <button
              type="button"
              class="btn btn-light px-3 border border-dark"
              style="font-size: 10px"
              onclick="deletePartner('<%= item.uid %>')"
            >
              Delete
            </button>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <div id="total-page" class="visually-hidden"><%= totalPage %></div>
</div>

<div class="d-flex justify-content-end mt-4">
  <nav>
    <ul class="pagination"></ul>
  </nav>
</div>
<script>
  let path;
  let limitVal;
  let selectedId;
  $(document).ready(() => {
    path = window.location.pathname;
    const urlParams = new URLSearchParams(window.location.search);
    const schVal = urlParams.get("search") ? urlParams.get("search") : "";
    const pageVal = urlParams.get("page") ? parseInt(urlParams.get("page")) : 1;
    limitVal = urlParams.get("perPage")
      ? parseInt(urlParams.get("perPage"))
      : 10;
    const totalPage = parseInt($("#total-page").text());
    console.log(pageVal, limitVal, totalPage);

    if (pageVal > 1) {
      $(".pagination").append(`
        <li class="page-item">
          <a class="page-link" href="${path}?search=${schVal}&page=${
        pageVal - 1
      }&perPage=${limitVal}">Previous</a>
        </li>
      `);
    }

    const ses = Math.floor(pageVal / 5);
    let maxPage = ses + 5;
    if (maxPage > totalPage) {
      maxPage = totalPage;
    }
    for (let i = ses + 1; i <= maxPage; i++) {
      if (pageVal == i) {
        $(".pagination").append(`
        <li class="page-item active" aria-current="page">
          <span class="page-link">${i}</span>
        </li>
      `);
      } else {
        $(".pagination").append(`
        <li class="page-item"><a class="page-link" href="${path}?search=${schVal}&page=${i}&perPage=${limitVal}">${i}</a></li>
      `);
      }
    }

    if (pageVal < maxPage) {
      $(".pagination").append(`
        <li class="page-item">
          <a class="page-link" href="${path}?search=${schVal}&page=${
        pageVal + 1
      }&perPage=${limitVal}">Next</a>
        </li>
      `);
    }
  });

  const goSch = () => {
    const query = $("#sch").val();
    window.location.replace(
      `${path}?search=${query}&page=1&perPage=${limitVal}`
    );
  };

  const goEdit = (id) => {
    selectedId = id
    $('#modalUpdate :input').prop("disabled", true)
    fetch(`/api/partner-smi/getPartner/${id}`, {method: "GET"}).then((resp)=> resp.json()).then((data)=>{
      const {dealer_name, code, cust_name, url, region, team, dropship} = data.data
      $("#updealer_name").val(dealer_name);
      $("#upcode").val(parseInt(code))
      $("#upcust_name").val(cust_name)
      $("#upurl").val(url)
      $("#upregion").val(region)
      $("#upteam").val(team)
      if (dropship == 'Dropship') {
        $('#upyes').attr('checked', 'checked');
      } else {
        $('#upno').attr('checked', 'checked');
      }
      $('#modalUpdate :input').prop("disabled", false)
    }).catch((err)=> {
      console.log(err)
    })
  };

  const addPartner = () => {
    fetch(
      `/api/partner-smi/addPartner?apikey=${localStorage.getItem(
        "synnex-userid"
      )}`,
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          dealer_name: $("#dealer_name").val(),
          code: $("#code").val(),
          cust_name: $("#cust_name").val(),
          url: $("#url").val(),
          region: $("#region").val(),
          team: $("#team").val(),
          dropship: $('input[name="dropship"]:checked').val(),
        }),
      }
    )
      .then((res) => {
        if (res.ok) {
          alert("Succes add Partner SMI");
          window.location.reload();
        } else {
          alert(`${res.status} - ${res.statusText}`);
        }
      })
      .catch((err) => {
        alert(`${err}`);
      });
  };

  const updatePartner = () => {
    fetch(
      `/api/partner-smi/updatePartner/${selectedId}?apikey=${localStorage.getItem(
        "synnex-userid"
      )}`,
      {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          dealer_name: $("#updealer_name").val(),
          code: $("#upcode").val(),
          cust_name: $("#upcust_name").val(),
          url: $("#upurl").val(),
          region: $("#upregion").val(),
          team: $("#upteam").val(),
          dropship: $('input[name="updropship"]:checked').val(),
        }),
      }
    )
      .then((res) => {
        if (res.ok) {
          alert("Succes update Partner SMI");
          window.location.reload();
        } else {
          alert(`${res.status} - ${res.statusText}`);
        }
      })
      .catch((err) => {
        alert(`${err}`);
      });
  };

  const deletePartner = (id) => {
    fetch(
      `/api/partner-smi/deletePartner/${id}?apikey=${localStorage.getItem(
        "synnex-userid"
      )}`,
      {
        method: "DELETE",
      }
    )
      .then((res) => {
        if (res.ok) {
          alert("Succes delete Partner SMI");
          window.location.reload();
        } else {
          alert(`${res.status} - ${res.statusText}`);
        }
      })
      .catch((err) => {
        alert(`${err}`);
      });
  };
</script>
