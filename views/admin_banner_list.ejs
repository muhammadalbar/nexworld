  const postNewBanner = () => {
    if (!$("#image")[0].files[0]) {
      alert("Please add image");
    } else {
      console.log("uploading...");
      let formData = new FormData();
      formData.append("name", $("#desc").val());
      formData.append("url", $("#url").val());
