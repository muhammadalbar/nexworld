      formData.append("image", $("#upimage")[0].files[0]);
    }

    let requestHeaders = new Headers();
    requestHeaders.delete("Content-Type");

    fetch("/api/banners/updateBanner/4f07b268-1983-49ac-9f46-10d3abd2c837", {
