<div class="container-fluid p-5">
  <h4><strong><%= title %></strong></h4>
  <p class="mt-4 mb-4" style="font-size: smaller"><%= description %></p>
  <% contents.map((item, index)=>{ %>
  <div class="mb-1">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <p class="my-1" style="font-size: medium">
          <strong><%= index + '. ' %></strong>
          <%= item.title %>
        </p>
      </div>
      <div>
        <a href="<%= item.url %>">
          <span
            data-feather="arrow-right"
            style="color: #01cdf2; cursor: pointer"
          ></span
        ></a>
      </div>
    </div>
    <hr style="border-top: 2px solid #d55085" />
  </div>
  <% }) %>
</div>

<style>
  .container-fluid {
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    border: 6px solid #c65a85;
    box-sizing: border-box;
    box-shadow: 0px 0px 5px #d55085;
    border-radius: 20px;
    color: white;
  }
</style>
