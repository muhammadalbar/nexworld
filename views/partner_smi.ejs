<div class="container-fluid p-5">
  <div
    id="carouselExampleControls"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner">
      <% banner.map((item, index)=>{ %> <% if(index == 1){ %>
      <div class="carousel-item active">
        <img
          src="<%= process.env.FRONTEND_ADDRESS + item.imageurl %>"
          class="d-block w-100"
          alt="<%= item.name %>"
          onclick="goToUrl('<%= item.url %>')"
          style="cursor: pointer"
        />
      </div>
      <% } else{ %>
      <div class="carousel-item">
        <img
          src="<%= process.env.FRONTEND_ADDRESS + item.imageurl %>"
          class="d-block w-100"
          alt="<%= item.name %>"
          onclick="goToUrl('<%= item.url %>')"
          style="cursor: pointer"
        />
      </div>
      <% } %> <% }) %>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="d-flex flex-column flex-sm-row justify-content-sm-between mt-5">
    <a href="/special-deal">
      <button
        class="btn btn-primary title-glow py-1 px-4"
        style="background-color: transparent; font-size: small"
      >
        <span
          style="color: #01cdf2; width: 30px; height: 30px"
          class="me-1"
          data-feather="arrow-left"
        ></span>
        Kembali
      </button>
    </a>
    <div class="dropdown">
      <button
        class="btn btn-dark dropdown-toggle"
        type="button"
        id="dropdownMenuButton2"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        Lokasi : <%= selectedRegion ? selectedRegion : 'All' %>
      </button>
      <ul
        class="dropdown-menu dropdown-menu-dark overflow-auto"
        style="max-height: 300px"
        aria-labelledby="dropdownMenuButton2"
      >
        <% regions.map((item)=>{ %> <% if(selectedRegion ==
        item.region.toUpperCase()){ %>
        <li>
          <a
            class="dropdown-item active"
            href="/partner-smi?region=<%= item.region %>"
            ><%= item.region %></a
          >
        </li>
        <% } else{ %>
        <li>
          <a class="dropdown-item" href="/partner-smi?region=<%= item.region %>"
            ><%= item.region %></a
          >
        </li>
        <% } %> <% }) %>
      </ul>
    </div>
  </div>
  <div class="row my-2">
    <% partners.map((item)=>{ %>
    <div
      class="col-12 col-sm-4 col-md-3 text-center mt-4"
      style="cursor: pointer"
      onclick="goToUrl('<%= item.url %>')"
    >
      <div class="p-3 modal-black" style="height: 100%">
        <!-- <img
          src="./img/landing/tokotpedia.png"
          style="width: 30%"
          class="mb-2"
        /> -->
        <p class="title-glow mt-1"><%= item.dealer_name.toUpperCase() %></p>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<script>
  const goToUrl = (url) => {
    window.open(url);
  };
</script>

<style>
  .container-fluid {
    background-image: url("./img/background-2.png");
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .modal-black {
    background: rgba(0, 0, 0, 0.8);
    border: 6px solid #c65a85;
    box-sizing: border-box;
    box-shadow: 0px 0px 5px #d55085;
    border-radius: 20px;
    color: white;
  }
  .title-glow {
    -webkit-text-stroke: 2px #ff6db8;
    text-shadow: 0px 0px 10px #b7025f, 0px 0px 10px #b7025f,
      0px 0px 10px #b7025f;
    text-transform: uppercase;
    color: black;
  }
  .title-glow:hover {
    text-shadow: 0 0 2px #fff, 0 0 5px #fff, 0 0 16px #fff, 0 0 37px #0fa,
      0 0 77px #0fa, 0 0 87px #0fa, 0 0 97px #0fa, 0 0 146px #0fa;
  }
  ::-webkit-scrollbar {
    width: 5px !important;
    height: 5px !important;
  }
  /* Track */
  ::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px white;
    border-radius: 10px;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #a0a3bd;
    border-radius: 10px;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #01cdf2;
  }
</style>
