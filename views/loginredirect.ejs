<div class="row">
  <div class="d-flex justify-content-center align-items-center text-white py-5">
    You'll get automatically redirected, if that doesn't happen in the next 1
    minute,
    <a
      onClick="manualRedirect()"
      style="color: #b7025f; font-weight: bold; text-decoration: none"
    >
      please click this link</a
    >
  </div>
</div>
<script>
  const userkey = "<%= userkey %>";
  const userEmail = "<%= user %>";
  const username = "<%= username %>";
  const jwt = "<%= jwt %>";
  const redirecturl = "<%= redirecturl %>";
  localStorage.setItem(userkey + "-user", userEmail);
  localStorage.setItem(userkey + "-username", username);
  localStorage.setItem(userkey + "-jwt", jwt);

  setInterval(function () {
    window.location.replace(redirecturl);
  }, 1000);

  function manualRedirect() {
    let userEmail = "<%= user %>";
    let username = "<%= username %>";
    let jwt = "<%= jwt %>";
    let userid = "<%= userid %>";
    localStorage.setItem(userkey + "-user", userEmail);
    localStorage.setItem(userkey + "-username", username);
    localStorage.setItem(userkey + "-jwt", jwt);
    localStorage.setItem(userkey + "-userid", userid);

    window.location.replace(redirecturl);
  }
</script>
